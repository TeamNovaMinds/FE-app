{
  "expo": {
    "name": "JustFridge",
    "slug": "just-fridge-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/JustFridge_logo.png",
    "scheme": "justfridge",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/JustFridge_logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/JustFridge_logo.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-web-browser",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#ffffff",
          "sounds": []
        }
      ]
    ],
    "notification": {
      "icon": "./assets/images/notification-icon.png",
      "color": "#ffffff",
      "iosDisplayInForeground": true,
      "androidMode": "default",
      "androidCollapsedTitle": "JustFridge"
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "8292e4fb-65b2-4e17-a233-8214b23aa6e1"
      }
    }
  }
}
